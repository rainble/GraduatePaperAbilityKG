<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.fudan.selab.abilitykg.DAO.LocationDAO">

    <select id="queryLocationByAbility" resultType="LocationDTO" parameterType="java.lang.String">
        SELECT
            locationId "locationId",
            label "label",
            ability "ability",
            reachableLocation "reachableLocation"
         FROM location
         WHERE
            <if test="ability != null">
                <bind name="ability" value="'%' + ability + '%'"/>
                ability LIKE #{ability}
            </if>
    </select>
</mapper>